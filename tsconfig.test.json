{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "es2018"
        ],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "useUnknownInCatchVariables": false
    },
    "include": [
        "src/",
        "test/"
    ]
}